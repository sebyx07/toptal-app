<% if current_user.present? || current_admin.present? %>
    <nav class="main-navbar">
      <div class="nav-wrapper">
        <%= link_to 'Jogging', root_path, class: 'brand-logo center' %>
        <ul class="right">
          <% if current_user.present? %>
            <li>
              <%= link_to 'Reports', jogging_time_reports_path %>
            </li>
          <% end %>
          <li>
            <a class="dropdown-button" href="#!" data-activates="dropdown1">
              <%= current_user&.username ||  current_admin.username %> - <%= current_user&.role || current_admin.role %>
            </a>
          </li>
        </ul>
      </div>
    </nav>


    <ul id="dropdown1" class="dropdown-content">
      <% if current_admin.present? %>
        <li>
          <%= link_to 'Logout From Admin', authentication_logout_admin_path, method: :delete %>
        </li>
        <% if current_user.present? %>
          <li>
            <%= link_to "Logout From #{current_user.username}s account", authentication_logout_path, method: :delete %>
          </li>
        <% end %>
      <% else %>
        <li>
          <%= link_to 'Logout', authentication_logout_path, method: :delete %>
        </li>
      <% end %>
    </ul>
<% end %>